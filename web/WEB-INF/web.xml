<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>products</servlet-name>
        <servlet-class>servlets.ProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>partners</servlet-name>
        <servlet-class>servlets.PartnersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>partners</servlet-name>
        <url-pattern>/partners</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>invoices</servlet-name>
        <servlet-class>servlets.InvoicesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>invoices</servlet-name>
        <url-pattern>/invoices</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>release</servlet-name>
        <servlet-class>servlets.ReleaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>release</servlet-name>
        <url-pattern>/release</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>receipt</servlet-name>
        <servlet-class>servlets.ReceiptServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>receipt</servlet-name>
        <url-pattern>/receipt</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>groups</servlet-name>
        <servlet-class>servlets.GroupsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>groups</servlet-name>
        <url-pattern>/groups</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>manufacturers</servlet-name>
        <servlet-class>servlets.ManufacturerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>manufacturers</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>product_info</servlet-name>
        <servlet-class>servlets.ProductInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>product_info</servlet-name>
        <url-pattern>/product_info</url-pattern>
    </servlet-mapping>
</web-app>
